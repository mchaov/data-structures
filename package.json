{
  "name": "ts-react-project-template",
  "version": "1.0.0",
  "description": "Starting point for projects with react and typescript.",
  "scripts": {
    "webpack:dev": "webpack --config ./.configs/webpack.config.package.dev.js -w",
    "webpack": "webpack --config ./.configs/webpack.config.package.prod.js",
    "test": "jest --bail --config ./.configs/jest.config.package.js",
    "test:coverage": "jest --coverage --bail --config ./.configs/jest.config.package.js",
    "start": "ws --spa index-package.html -p 8080 -z",
    "lint": "tslint -c ./.configs/tslint.json ./packages/package/**/*.ts* --fix",
    "build": "npm run lint && npm run webpack"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mchaov/ts-react-project-template.git"
  },
  "devDependencies": {
    "@types/jest": "27.4.1",
    "@types/mocha": "9.1.0",
    "@types/node": "14.0.11",
    "@types/react": "17.0.43",
    "@types/react-dom": "17.0.14",
    "css-loader": "6.7.1",
    "file-loader": "6.2.0",
    "jest": "27.5.1",
    "jest-cli": "27.5.1",
    "less": "4.1.2",
    "less-loader": "10.2.0",
    "less-plugin-clean-css": "1.5.1",
    "local-web-server": "5.2.0",
    "mini-css-extract-plugin": "2.6.0",
    "style-loader": "3.3.1",
    "ts-jest": "27.1.4",
    "ts-loader": "9.2.8",
    "ts-node": "10.7.0",
    "tslint": "6.1.3",
    "typescript": "4.6.3",
    "webpack": "5.71.0",
    "webpack-bundle-analyzer": "4.5.0",
    "webpack-cli": "4.9.2",
    "webpack-raw-bundler": "1.3.6"
  },
  "dependencies": {
    "mobx": "6.5.0",
    "mobx-react": "7.3.0",
    "mobx-utils": "6.0.4",
    "react": "18.0.0",
    "react-dom": "18.0.0"
  }
}
